@model EmployeeManagement.Models.Employee
@using System.Web.Mvc
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>


    <h2>Edit Employee</h2>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.EmployeeID)

        <div>
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
        <div>
            @Html.LabelFor(m => m.Department)
            @Html.TextBoxFor(m => m.Department, new { @class = "form-control" })
        </div>
        <div>
            @Html.LabelFor(m => m.Salary)
            @Html.TextBoxFor(m => m.Salary, new { @class = "form-control", type = "number" })
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    }

    <p>
        @Html.ActionLink("Back to List", "Index", "Employees", null, new { @class = "btn btn-secondary" })
    </p>

</body>
</html>
