@model IEnumerable<EmployeeManagement.Models.Employee>
   
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
   

    <h2>Employee List</h2>

    <table class="table">
        <thead>
            <tr>
                <th style="padding: 10px 20px;">Name</th>
                <th style="padding: 10px 20px;">Department</th>
                <th style="padding: 10px 20px;">Salary</th>
                <th style="padding: 10px 20px;">Actions</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Department</td>
                    <td>@employee.Salary</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = employee.EmployeeID })" class="btn btn-warning mr-">Edit</a>
                        <a href="@Url.Action("Delete", new { id = employee.EmployeeID })" class="btn btn-danger">Delete</a>
                    </td>

                </tr>
            };
        </tbody>
    </table>

    <p>
        <a href="@Url.Action("Create", "Employees")" class="btn btn-primary">Create New Employee</a>
    </p>

</body>
</html>
